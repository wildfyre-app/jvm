{
    "exclude": ["(libs/)"],
    "linters": {
        "filename": {
            "type": "filename"
        },

        "spelling": {
            "type": "spelling"
        },

        "generated": {
            "type": "generated"
        },

        "merge-conflict": {
            "type": "merge-conflict"
        },

        "chmod": {
            "type": "chmod"
        },

        "java": {
            "type": "script-and-regex",
            "include": "(build.gradle)",
            "script-and-regex.script": "./gradlew --quiet build test check javadoc #",
            "script-and-regex.regex": "/^(?P<message>(?!--.*).*): warning (?P<warning>.*warning.*)$/m"
        }
    }
}
